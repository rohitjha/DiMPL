{-
-------------------------------
| GCD/HCF Module for MPL |
-------------------------------

Functionality for:
	-> 

Author: Rohit Jha
Version: 0.0.1
Date: 26 Dec 2012
-}


module MPL.NumberTheory.GCD where


gcd a 0 = a
gcd a b = gcd b (a `mod` b)


gcdList = foldl gcd 0


hcf = gcd


lcm a b = (a*b) / (gcd a b)
